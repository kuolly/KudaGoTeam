<form action="/user/signup" method="POST">
  <div class="mb-3">
    <input type="text" placeholder="name" name="name" class="form-control" id="inputName">
  </div>
  <div class="mb-3">
    <input type="email" placeholder="email" name="email" class="form-control" id="inputEmail"
      aria-describedby="emailHelp">
  </div>
  <div class="mb-3">
    <input type="password" placeholder="password" name="password" class="form-control" id="inputPassword">
  </div>
  <select name="type" hidden>
    <option value="admin">Admin</option>
    <option value="neadmin">neAdmin</option>
  </select>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
